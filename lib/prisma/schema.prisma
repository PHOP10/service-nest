generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  userId       String    @unique @default(uuid()) @map("user_id") @db.VarChar(50)
  username     String    @unique
  password     String
  firstName    String    @map("first_name")
  lastName     String    @map("last_name")
  nickName     String?   @map("nick_name")
  email        String
  phoneNumber  String?   @map("phone_number")
  employeeId   String?   @map("employee_code") @db.VarChar(4)
  position     String?   @map("position")
  refreshToken String?
  role         String?   @default("user")
  gender       String?   @map("gender")
  startDate    DateTime? @map("start_date") @db.Timestamptz(6)
  createdAt    DateTime? @default(now()) @map("create_at") @db.Timestamptz(6)
  updatedAt    DateTime? @updatedAt @map("update_at") @db.Timestamptz(6)
}

model OfficialTravelRequest {
  id              Int        @id @default(autoincrement()) @map("id")
  recipient       String?    @map("recipient")
  documentNo      String     @unique @map("document_no")
  title           String?    @map("title")
  missionDetail   String     @map("mission_detail")
  location        String     @map("location")
  startDate       DateTime   @map("start_date") @db.Timestamptz(6)
  endDate         DateTime   @map("end_date") @db.Timestamptz(6)
  budget          String?    @map("budget")
  status          String     @map("status")
  note            String?    @map("note")
  cancelName      String?    @map("cancel_name")
  cancelReason    String?    @map("cancel_reason")
  cancelAt        DateTime?  @map("cancel_at") @db.Timestamptz(6)
  passengers      Int?       @map("passengers")
  passengerNames  String[]   @map("passenger_names")
  travelType      String[]   @map("travel_type")
  carId           Int?       @map("car_id")
  MasterCar       MasterCar? @relation(fields: [carId], references: [id])
  privateCarId    String?    @map("private_car_id")
  otherTravelType String?    @map("other_travel_type")
  approvedById    String?    @map("approved_by_id")
  approvedByName  String?    @map("approved_by_name")
  approvedDate    DateTime?  @map("approved_date")
  createdName     String?    @map("created_name")
  createdById     String?    @map("created_by_id")
  createdAt       DateTime   @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime   @updatedAt @map("updated_at") @db.Timestamptz(6)
  deletedAt       DateTime?  @map("deleted_at")
}

model MaCar {
  id             Int       @id @default(autoincrement()) @map("id")
  recipient      String?   @map("recipient")
  documentNo     String?   @unique @map("document_no")
  requesterName  String?   @map("requester_name")
  purpose        String    @map("purpose")
  dateStart      DateTime? @map("date_start") @db.Timestamptz(6)
  dateEnd        DateTime? @map("date_end") @db.Timestamptz(6)
  destination    String    @map("destination")
  passengers     Int       @map("passengers")
  passengerNames String[]  @map("passenger_names")
  typeName       String[]  @map("type_name")
  budget         String?   @map("budget")
  status         String    @default("available") @map("status")
  note           String?   @map("note")
  driver         String?   @map("driver")
  cancelName     String?   @map("cancel_name")
  cancelReason   String?   @map("cancel_reason")
  cancelAt       DateTime? @map("cancel_at") @db.Timestamptz(6)
  approvedByName String?   @map("approved_by_name")
  approvedAt     DateTime? @map("approved_at") @db.Timestamptz(6)
  carId          Int       @map("car_id")
  masterCar      MasterCar @relation(fields: [carId], references: [id])
  createdName    String?   @map("created_name")
  createdById    String?   @map("created_by_id")
  createdAt      DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)
}

model MasterCar {
  id                    Int                     @id @default(autoincrement()) @map("id")
  carName               String                  @map("car_name")
  numberType            Int?                    @map("number_type")
  licensePlate          String                  @unique @map("license_plate")
  brand                 String                  @map("brand")
  model                 String                  @map("model")
  status                String                  @default("available") @map("status")
  fuelType              String?                 @map("fuel_type")
  details               String?                 @map("details")
  maCars                MaCar[]
  OfficialTravelRequest OfficialTravelRequest[]
}

model DataLeave {
  id             Int         @id @default(autoincrement()) @map("id")
  reason         String      @map("reason")
  dateStart      DateTime    @map("date_start") @db.Timestamptz(6)
  dateEnd        DateTime    @map("date_end") @db.Timestamptz(6)
  status         String      @default("pending") @map("status")
  approvedById   String?     @map("approved_by_id")
  approvedByName String?     @map("approved_by_name")
  approvedDate   DateTime?   @map("approved_date") @db.Timestamptz(6)
  details        String?     @map("details")
  cancelReason   String?     @map("cancel_reason")
  cancelName     String?     @map("cancel_name")
  typeId         Int         @map("type_id")
  writeAt        String?     @map("contact_location")
  contactAddress String?     @map("contact_address")
  contactPhone   String?     @map("contact_phone")
  fileName       String?     @map("file_name")
  backupUserId   String?     @map("backup_user_id")
  masterLeave    MasterLeave @relation(fields: [typeId], references: [id])
  cancelAt       DateTime?   @map("cancel_at") @db.Timestamptz(6)
  approvedAt     DateTime?   @map("approved_at") @db.Timestamptz(6)
  createdById    String?     @map("created_by_id")
  createdName    String?     @map("created_name")
  createdAt      DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime    @updatedAt @map("updated_at") @db.Timestamptz(6)
}

model MasterLeave {
  id          Int         @id @default(autoincrement()) @map("id")
  leaveType   String      @unique @map("leave_type")
  description String?     @map("description")
  leaveQuota  Int?        @map("leave_quota")
  dataLeaves  DataLeave[]
}

model VisitHome {
  id Int @id @default(autoincrement()) @map("id")

  // --- ข้อมูลพื้นฐานผู้ป่วย (จากส่วนบนของฟอร์ม) ---
  hhcNo            String?        @map("hhc_no") // เลขที่ HHC
  referralDate     DateTime?      @map("referral_date") // วันที่ส่ง (Referral Date)
  patientTypeId    Int?           @map("patient_type_id") // ประเภทผู้ป่วย (Relation เดิม)
  firstName        String?        @map("first_name") // ชื่อผู้ป่วย
  lastName         String?        @map("last_name") // นามสกุล
  fullName         String?        @map("full_name") // ชื่อ-นามสกุล (ใช้ field เด
  age              Int            @map("age") // อายุ
  hn               String?        @map("hn") // HN (Hospital Number)
  dob              DateTime?      @map("dob") // วันเดือนปีเกิด
  cid              String?        @map("cid") // เลข 13 หลัก (Citizen ID)
  phone            String?        @map("phone") // เบอร์โทร
  address          String         @map("address") // ที่อยู่จริง
  allergies        String?        @map("allergies") // แพ้ยา/แพ้อาหาร
  admissionDate    DateTime?      @map("admission_date") // วันที่เข้ารับการรักษา
  dischargeDate    DateTime?      @map("discharge_date") // วันที่จำหน่ายออกจาก รพ.
  temperature      Float?         @map("temperature") // T (อุณหภูมิร่างกาย)
  pulseRate        Int?           @map("pulse_rate") // PR (อัตราการเต้นหัวใจ BPM)
  respRate         Int?           @map("resp_rate") // RR (อัตราการหายใจ /min)
  bloodPressure    String?        @map("blood_pressure") // BP (ความดันโลหิต mmHg)
  oxygenSat        Float?         @map("oxygen_sat") // O2 sat (%)
  initialHistory   String?        @map("initial_history") // ประวัติการเจ็บป่วยแรกรับ
  symptoms         String?        @map("symptoms") // อาการปัจจุบัน ก่อนกลับบ้าน (ใช้ field เดิม )
  diagnosis        String?        @map("diagnosis") // การวินิจฉัยโรค
  medication       String?        @map("medication") // ยากลับบ้าน (ใช้ field เดิม, อาจเก็บเป็น Text ยาวๆ หรือ JSON)
  medicalEquipment String?        @map("medical_equipment") // อุปกรณ์ที่ติดตัวกลับบ้าน
  careNeeds        String?        @map("care_needs") // ความต้องการในการดูแล (ระบุปัญหาที่พบ)
  nextAppointment  DateTime?      @map("next_appointment") @db.Timestamptz(6) // การนัดติดตามอาการ (ใช้ field เดิม)
  visitDate        DateTime       @map("visit_date") @db.Timestamptz(6) // วันที่ไปเยี่ยมจริง (field เดิม)
  notes            String?        @map("notes") // หมายเหตุเพิ่มเติม (field เดิม)
  createdById      String?        @map("created_by_id")
  createdName      String?        @map("created_name") // ผู้บันทึก
  createdAt        DateTime       @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt        DateTime       @updatedAt @map("updated_at") @db.Timestamptz(6)
  patientType      MasterPatient? @relation(fields: [patientTypeId], references: [id])
}

model MasterPatient {
  id          Int         @id @default(autoincrement()) @map("id")
  typeName    String      @unique @map("type_name")
  description String?     @map("description")
  VisitHome   VisitHome[]
}

model MaDrug {
  id            Int          @id @default(autoincrement()) @map("id")
  requestNumber String?      @unique @map("request_number")
  requestUnit   String       @map("request_unit")
  roundNumber   Int          @map("round_number")
  requesterName String?      @map("requester_name")
  dispenserName String?      @map("dispenser_name")
  requestDate   DateTime     @map("request_date") @db.Timestamptz(6)
  quantityUsed  Int?         @map("quantity_used")
  totalPrice    Float?       @map("total_price")
  note          String?      @map("note")
  status        String       @map("status")
  cancelReason  String?      @map("cancel_reason")
  cancelName    String?      @map("cancel_name")
  createdName   String?      @map("created_name")
  createdAt     DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime     @updatedAt @map("updated_at") @db.Timestamptz(6)
  maDrugItems   MaDrugItem[]
}

model Drug {
  id            Int          @id @default(autoincrement()) @map("id")
  workingCode   String       @unique @map("working_code")
  name          String       @map("name")
  drugTypeId    Int          @map("drug_type_id") // FK ไป MasterDrug
  packagingSize String       @map("packaging_size")
  price         Float        @map("price")
  quantity      Int          @map("quantity")
  note          String?      @map("note")
  cancelReason  String?      @map("cancel_reason")
  createdAt     DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime     @updatedAt @map("updated_at") @db.Timestamptz(6)
  drugType      MasterDrug   @relation(fields: [drugTypeId], references: [drugTypeId])
  MaDrugItem    MaDrugItem[]
}

model MasterDrug {
  id          Int     @id @default(autoincrement()) @map("id")
  drugTypeId  Int     @unique @map("drug_type_id")
  drugType    String  @map("drug_type")
  description String? @map("description")
  drugs       Drug[] // หนึ่งประเภทยา มีหลายยา
}

model MaDrugItem {
  id       Int @id @default(autoincrement())
  maDrugId Int
  drugId   Int
  quantity Int

  maDrug MaDrug @relation(fields: [maDrugId], references: [id], onDelete: Cascade)
  drug   Drug   @relation(fields: [drugId], references: [id])

  @@unique([maDrugId, drugId])
}

model DurableArticle {
  id                      Int       @id @default(autoincrement()) @map("id")
  code                    String    @unique @map("code")
  registrationNumber      String?   @map("registration_number")
  acquiredDate            DateTime  @map("acquired_date") @db.Timestamptz(6)
  description             String    @map("description")
  unitPrice               Float     @map("unit_price")
  acquisitionType         String    @map("acquisition_type")
  usageLifespanYears      Int       @map("usage_lifespan_years")
  monthlyDepreciation     Float     @map("monthly_depreciation")
  yearlyDepreciation      Float?    @map("yearly_depreciation")
  accumulatedDepreciation Float?    @map("accumulated_depreciation")
  netValue                Float?    @map("net_value")
  type                    String?   @map("type")
  attributes              String?   @map("attributes")
  category                String?   @map("category")
  documentId              String?   @map("document_id")
  responsibleAgency       String?   @map("responsible_agency")
  note                    String?   @map("note")
  createdName             String?   @map("created_name")
  createdAt               DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt               DateTime? @updatedAt @map("updated_at") @db.Timestamptz(6)
}

model SupportingResource {
  id                Int      @id @default(autoincrement()) @map("id") //ไม่ได้ใช้แล้ว
  code              String   @unique @map("code")
  name              String   @map("name")
  status            String?  @map("status")
  acquiredDate      DateTime @map("acquired_date") @db.Timestamptz(6)
  acquisitionType   String?  @map("acquisition_type")
  description       String?  @map("description")
  attributes        String?  @map("attributes") // ลักษณะ/คุณสมบัติ
  category          String?  @map("category") // ประเภท
  documentId        String?  @map("document_id") // เลขอ้างอิงเอกสาร
  responsibleAgency String?  @map("responsible_agency") // หน่วยงานรับผิดชอบ
  createdById       String?  @map("created_by_id")
  createdBy         String?  @map("created_by")
  createdAt         DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt         DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)
}

model MedicalEquipment {
  id            Int       @id @default(autoincrement()) @map("id")
  equipmentName String?   @map("equipment_name")
  quantity      Int       @map("quantity")
  acquiredDate  DateTime? @map("acquired_date") @db.Timestamptz(6)
  description   String?   @map("description")
  createdName   String?   @map("created_name")
  createdById   String?   @map("created_by_id")
  createdBy     String?   @map("created_by")
  createdAt     DateTime? @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime? @updatedAt @map("updated_at") @db.Timestamptz(6)

  items MaMedicalEquipmentItem[]
}

model MaMedicalEquipment {
  id           Int                      @id @default(autoincrement()) @map("id")
  sentDate     DateTime                 @map("sent_date") @db.Timestamptz(6)
  receivedDate DateTime?                @map("received_date") @db.Timestamptz(6)
  status       String                   @default("Pending") @map("status")
  note         String?                  @map("note")
  cancelReason String?                  @map("cancel_reason")
  nameReason   String?                  @map("name_reason")
  createdById  String?                  @map("created_by_id")
  createdBy    String?                  @map("created_by")
  approveById  String?                  @map("approve_by_id")
  approveBy    String?                  @map("approve_by")
  returnName   String?                  @map("return_name")
  approveAt    DateTime?                @map("approve_at") @db.Timestamptz(6)
  createdName  String?                  @map("created_name")
  createdAt    DateTime?                @map("created_at") @db.Timestamptz(6)
  returndAt    DateTime?                @map("return_at") @db.Timestamptz(6)
  updatedAt    DateTime?                @updatedAt @map("updated_at") @db.Timestamptz(6)
  items        MaMedicalEquipmentItem[]
}

model MaMedicalEquipmentItem {
  id                   Int                @id @default(autoincrement())
  quantity             Int                @map("quantity")
  maMedicalEquipmentId Int
  medicalEquipmentId   Int
  maMedicalEquipment   MaMedicalEquipment @relation(fields: [maMedicalEquipmentId], references: [id], onDelete: Cascade)
  medicalEquipment     MedicalEquipment   @relation(fields: [medicalEquipmentId], references: [id])
}

model InfectiousWaste {
  id            Int       @id @default(autoincrement()) @map("id")
  wasteType     String    @map("waste_type")
  wasteWeight   Float     @default(0.0) @map("waste_weight")
  discardedDate DateTime  @map("discarded_date") @db.Timestamptz(6)
  wasteDate     DateTime? @map("waste_date") @db.Timestamptz(6)
  createdName   String?   @map("created_name")
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    String // ถ้าใช้ Int เปลี่ยนเป็น Int
  menuKey   String // เช่น "manageMaCar" หรือ "maCarBook"
  title     String?
  message   String
  isRead    Boolean  @default(false)
  meta      Json? // เก็บข้อมูลเพิ่มเติม ถ้าต้องการ (e.g. relatedId)
  createdAt DateTime @default(now())
}
